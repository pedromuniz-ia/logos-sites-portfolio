{
  "name": "logos-remotion",
  "private": true,
  "version": "1.0.0",
  "description": "Remotion compositions for LOGOS landing pages",
  "scripts": {
    "preview": "remotion studio src/index.jsx",
    "render:webm": "remotion render src/index.jsx WhatsappIADemo ../media/chatbot-demo.webm --codec=vp8 --crf=18 --overwrite",
    "render:mp4": "remotion render src/index.jsx WhatsappIADemo ../media/chatbot-demo.mp4 --codec=h264 --crf=18 --pixel-format=yuv420p --overwrite",
    "render:poster": "remotion still src/index.jsx WhatsappIADemo ../images/chatbot-demo-poster.jpg --frame=160 --image-format=jpeg --jpeg-quality=82 --overwrite",
    "render:all": "npm run render:webm && npm run render:mp4 && npm run render:poster"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "remotion": "^4.0.366"
  },
  "devDependencies": {
    "@remotion/cli": "^4.0.366"
  }
}
